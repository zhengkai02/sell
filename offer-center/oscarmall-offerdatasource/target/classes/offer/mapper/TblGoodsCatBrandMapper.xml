<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.iwhalecloud.retail.offer.mapper.TblGoodsCatBrandMapper">
    <update id="deleteGoodsCatBrandByIds">
        update tbl_goods_cat_brand
        set state = 'X', modify_by = #{modifyBy}, modify_time = now()
        where rela_id in
        <foreach collection="relaIds" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </update>
</mapper>